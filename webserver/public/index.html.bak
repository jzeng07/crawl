<!DOCTYPE html>
<html lang="en" ng-app="aggregate">
  <head>
    <title>FirstWeb</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>
    <script src="js/controllers.js"></script>
    <style>
      /* Remove the navbar's default margin-bottom and rounded border */
      .navbar {
        margin-bottom: 0;
        border-radius: 0;
      }

      .container-top {
        height: 70px;
        background-color: #25a8ff;
        padding-top: 20px;
        padding-left: 10px;
      }

      .sidenav {
        background: #f1f1f1;
      }

      footer {
        background: #555;
        color: white;
        padding-top: 10px;
        height: 40px;
      }
    </style>

  </head>


  <body ng-controller="articlesCtrl">
  <ul ng-repeat="site in sites">
      <li><a href={{site.name}}>{{site.alias}}</a></li>
  </ul>
  
  <ul ng-repeat="article in articles">
      <li><a href={{article.path}}>{{article.title}}</a></li>
  </ul>

  <div>
     <label>Name:</label>
     <input type = "text" ng-model = "yourName" placeholder = "Enter a name here">
     <hr />
     
     <h1>Hello {{yourName}}!</h1>
  </div>

</body>
</html>
