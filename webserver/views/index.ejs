<% include header %>
        <div class="container-fluid text-center">
          <div class="row content">
            <div class="col-sm-2 sidenav">
              <ul class="nav nav-pills nav-stacked">
                <% for(var i=0; i<sites.length; i++) { %>
                <% if(active_site === sites[i]['name']) { %>
                       <li class="active"><a href=/<%= sites[i]['name'] %>><%= sites[i]['alias'] %></a></li>
                <% } else { %>
                       <li><a href=<%= sites[i]['name'] %>><%= sites[i]['alias'] %></a></li>
                <% } %>
                <% } %>
              </ul>
            </div>
            <div class="col-md-7">
              <% for(var i=0; i<articles.length; i++) { %>
              <% if(content) { %>
              <div class="row" hidden>
              <% } else { %>
              <div class="row">
              <% } %>
                <div class="col-sm-3">
                  <div class="well">
                    <p>News's picture</p>
                  </div>
                </div>
                <div class="col-sm-9">
                  <div class="well" id="n1">
                      <p><a href=<%= articles[i]['path'] %>><%= articles[i]['title']%></a></p>
                  </div>
                </div>
              </div>
              <% } %>
              <% if(content) { %>
              <div class="content" align="left">
              <% } else { %>
              <div class="content" hidden>
              <% } %>
                <h1><%= title %></h1>
                <%- content %>
              </div>
            </div>

            <div class="col-sm-3 well">
              <div class="well">
                <p>ADS</p>
              </div>
              <div class="well">
                <p>ADS</p>
              </div>
              <div class="well">
                <p>ADS</p>
              </div>
            </div>

          </div>
        </div>
        <footer class="container-fluid text-center" >
          <p>footer</p>

        </footer>

  </body>
</html>
